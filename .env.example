# Copy to .env and fill values

# ===== SERVER CONFIGURATION =====
NODE_ENV=development
PORT=5000

# ===== DATABASE =====
MONGO_URI=mongodb://localhost:27017/velvet_tails_db

# ===== JWT SECRETS (CRITICAL: Generate strong random secrets for production) =====
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=change_this_access_secret_to_64_char_random_string
JWT_REFRESH_SECRET=change_this_refresh_secret_to_64_char_random_string
ACCESS_TOKEN_EXPIRES=15m
REFRESH_TOKEN_EXPIRES=7d

# ===== FRONTEND & BACKEND URLS =====
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:5000

# ===== EMAIL CONFIGURATION (SMTP) =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM="The Velvet Tails <noreply@thevelvettails.com>"
ADMIN_EMAIL=admin@thevelvettails.com

# ===== PAYMENT GATEWAY (PayU) =====
PAYU_MERCHANT_KEY=your_merchant_key
PAYU_MERCHANT_SALT=your_merchant_salt

# ===== RAZORPAY (Legacy - if still used) =====
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxx
RAZORPAY_KEY_SECRET=rzp_test_secret

# ===== SHIPROCKET INTEGRATION =====
SHIPROCKET_EMAIL=your-shiprocket-email@example.com
SHIPROCKET_PASSWORD=your-shiprocket-password
SHIPROCKET_PICKUP_LOCATION=Primary

# ===== CLOUDINARY (Image Storage) =====
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ===== COMPANY DETAILS (For Invoices & GST) =====
COMPANY_NAME=The Velvet Tails
COMPANY_ADDRESS=Your Address
COMPANY_CITY=Your City
COMPANY_STATE=Your State
COMPANY_PINCODE=000000
COMPANY_GSTIN=Your GSTIN
COMPANY_PAN=Your PAN
